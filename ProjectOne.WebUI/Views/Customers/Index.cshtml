@model IEnumerable<ProjectOne.Models.Customers>
@{
    ViewData["Title"] = "Index";
}
<h1>Customers</h1>
<p>
    <a asp-action="Create">Create New</a>

</p>
<form asp-controller="Customers" asp-action="Index" method="get">
    <p>
        <input type="submit" value="Name Filter" />
        <input type="text" name="searchString">
        <a asp-action="Index">(All)</a>
    </p>
</form>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PhoneNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Store)
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PhoneNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Store)
            </td>
        </tr>
}
    </tbody>
</table>